	<script>
		
		document.getElementById("dineDiv").style.display="none";
		document.getElementById("choose").style.display="none";

		function dineFun(){
			document.getElementById("dineDiv").style.display="block";
			document.getElementById("parcel").style.display="none";
		}

		function parcelFun(){
			document.getElementById("dine").style.display="none";
			document.getElementById("choose").style.display="block";
		}

		function showFun(){
			document.getElementById("dine").style.display="inline-block";
			document.getElementById("parcel").style.display="inline-block";

			document.getElementById("choose").style.display="none";
			document.getElementById("dineDiv").style.display="none";
		}

		document.getElementById("dine").addEventListener("click",dineFun);
		document.getElementById("parcel").addEventListener("click",parcelFun);
		document.getElementById("showall").addEventListener("click",showFun);

	</script>

